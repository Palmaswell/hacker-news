{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es2017", "esnext", "webworker"],
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "noEmit": false,
    "incremental": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./src/**/*"]
}
